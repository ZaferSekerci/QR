<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#ff03043a"
        android:alpha="0.5"
        android:id="@+id/navigation"
        android:gravity="center_vertical">


        <Button
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="@drawable/back_back"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="15dp"
            android:onClick="yol_back" />


        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/baslik"
            android:textColor="#fffdffff"
            android:text="Yol Tarifi"
            android:textSize="30dp"
            android:layout_margin="20dp"
            android:gravity="center_vertical|center_horizontal" />



        <Button
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/home_back"
            android:layout_marginRight="15dp"
            android:onClick="home_goo" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/body">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/yol_goster"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:textSize="22dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:alpha="0.6" />

        <Button
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ogrenci_back"
            android:layout_marginBottom="15dp"
            android:onClick="ogr_isleri" />

        <Button
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:id="@+id/button17"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dekanlik_back"
            android:layout_marginBottom="15dp"
            android:onClick="dekanlik" />

        <Button
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:id="@+id/button18"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/kutuphane_back"
            android:onClick="kutuphane" />
    </LinearLayout>

</LinearLayout>
