<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#ff03043a"
        android:alpha="0.5"
        android:id="@+id/navigation"
        android:gravity="center_vertical">


        <Button
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="15dp" />


        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4"
            android:textColor="#fffdffff"
            android:text="Ders Programı"
            android:textSize="30dp"
            android:layout_margin="20dp"
            android:gravity="center_vertical|center_horizontal" />



        <Button
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/home"
            android:layout_marginRight="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Açıklama Gelecek"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="280dp"
            android:textSize="25dp"
            android:textColor="#fff7ffcb" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TARA"
            android:id="@+id/scan"
            android:layout_marginBottom="30dp"
            android:background="@drawable/tara_back"
            android:textSize="20dp"
            android:textStyle="bold"
            android:alpha="0.4" />
    </LinearLayout>

</LinearLayout>