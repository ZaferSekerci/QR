<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:alpha="10"
    android:id="@+id/giris"
    style="@android:style/Theme.DeviceDefault.Light.NoActionBar"
    android:background="@drawable/main_bg_bos">

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button"
        android:background="@drawable/etkinlik_back"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:background="@drawable/duyurular_back"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/yol_back" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button4"
        android:layout_marginTop="60dp"
        android:background="@drawable/ders_back"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button5"
        android:background="@drawable/sosyal_back"
        android:layout_alignTop="@+id/button4"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button6"
        android:layout_marginTop="15dp"
        android:background="@drawable/hakki_back"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>
